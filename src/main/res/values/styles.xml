<resources>

    <!-- Tema principale dell'app -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#6200EE</item> <!-- Colore principale -->
        <item name="colorPrimaryDark">#3700B3</item> <!-- Colore barra di stato -->
        <item name="colorAccent">#03DAC5</item> <!-- Colore degli accenti -->
    </style>

    <!-- Tema personalizzato per il TimePicker -->
    <style name="CustomTimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Colori personalizzati -->
        <item name="android:colorAccent">@color/teal_dark</item> <!-- Colore per evidenziare elementi attivi -->
        <item name="android:textColorPrimary">@color/white</item> <!-- Testo principale -->
        <item name="android:textColorSecondary">@color/light_teal_background</item> <!-- Testo secondario -->
        <item name="android:background">@color/green_dark</item> <!-- Sfondo del picker -->
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Tema personalizzato per il DatePicker -->
    <style name="CustomDatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Colori personalizzati -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#757575</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <!-- Stile per i pulsanti -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">@color/green_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <!-- Stile per i bottoni immagine -->
    <style name="CustomImageButtonStyle">
        <item name="android:tint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/teal_dark</item>
        <item name="android:backgroundTint">@color/teal_dark</item>
    </style>


    <!-- Stile per i TextView delle intestazioni -->
    <style name="HeaderTextViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Stile generale per il GridView -->
    <style name="GridViewStyle">
        <item name="android:background">#FFFFFF</item>
        <item name="android:horizontalSpacing">8dp</item>
        <item name="android:verticalSpacing">8dp</item>
        <item name="android:numColumns">1</item>
        <item name="android:stretchMode">columnWidth</item>
    </style>

    <!-- Stile per il contenitore delle colonne -->
    <style name="ColumnHeaderContainerStyle">
        <item name="android:background">#DDDDDD</item>
        <item name="android:padding">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>


</resources>
