<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget137"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/pickDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_my_calendar"
            android:contentDescription="@string/dataCalendario"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:onClick="onDataUsciteBtnPress" />

        <TextView
            android:id="@+id/dateSpesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:onClick="onDataUsciteBtnPress"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/descrizioneSpesa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="60"
            android:drawSelectorOnTop="true"
			android:textColor="#000000"
            android:prompt="@string/menu_selezione_voce" />

        <EditText
            android:id="@+id/soldiSpesa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="25"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/simboloEuro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/addSpesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_add"
            android:contentDescription="@string/addSpesa"
            android:onClick="onAddSpesaBtnPress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="15sp"
        android:paddingTop="15sp" >

        <ListView
            android:id="@+id/listaSpesa"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:fadingEdge="vertical"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>
	
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#f1f1f1"
        android:padding="10dp" >
		
		<ImageButton
            android:id="@+id/menu_salva_spese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_save"
            android:contentDescription="@string/menu_salva"
            android:onClick="onSalvaSpeseClick" />

        <ImageButton
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_help"
            android:contentDescription="@string/help"
			android:onClick="onHelpClick"					/>

        <ImageButton
            android:id="@+id/addDescrizione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="@string/addDescrizione" 
			android:onClick="onAddDescrizioneClick" />

        <ImageButton
            android:id="@+id/modificaDescrizione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="@string/menu_modifica" 
			android:onClick="onModificaDescrizioneClick"/>

        <ImageButton
            android:id="@+id/deleteSpesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="@string/deleteSpesa"
			android:onClick="onDeleteSpesaClick"			/>

    </LinearLayout>

</LinearLayout>