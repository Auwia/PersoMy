<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget32"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Total Revenues Row -->
    <TableRow
        android:id="@+id/widget145"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/widget47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/TOTEntrate"
            android:text="@string/TOTEntrate"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/totaleEntrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="#FFFFFF"
            android:contentDescription="@string/totaleEntrateDesc"
            android:gravity="end"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/simboloEuro"
            android:layout_width="32dp"
            android:layout_height="48dp"
            android:layout_weight="5"
            android:contentDescription="@string/currency"
            android:gravity="center"
            android:padding="8dp"
            android:text=""
            android:textSize="15sp" />

    </TableRow>

    <!-- Total Expenses Row -->
    <TableRow
        android:id="@+id/widget1450"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/widget51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/TOTUscite"
            android:text="@string/TOTUscite"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/totaleUscite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@string/totaleUsciteDesc"
            android:gravity="end"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/simboloEuro2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/euro_symbol"
            android:text="@string/currency"
            android:textSize="15sp" />
    </TableRow>

    <!-- Balance Row -->
    <TableRow
        android:id="@+id/widget1451"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/widget55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/saldo"
            android:text="@string/saldo"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/totaleSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@string/totaleSaldoDesc"
            android:gravity="end"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/simboloEuro3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/euro_symbol"
            android:text="@string/currency"
            android:textSize="15sp" />
    </TableRow>

</LinearLayout>
