<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget1232"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:minHeight="48dp">

    <TextView
        android:id="@+id/dataListaCustom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/display_selected_date"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="start|center_vertical"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text=""
        android:textColor="#333333"
        android:textIsSelectable="true"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/descrizioneListaCustom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/choose_expense_description_spinner"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:minHeight="48dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text=""
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/simbolo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_weight="4"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/euro_symbol"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/currency"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/soldiListaCustom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="16"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/soldiSpesaDesc"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="end|center_vertical"
        android:minHeight="48dp"
        android:padding="8dp"
        android:text=""
        android:textIsSelectable="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/simboloEuro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/euro_symbol_voce"
        android:gravity="center"
        android:minHeight="48dp"
        android:padding="8dp"
        android:text=""
        android:textSize="16sp" />

</TableRow>
