<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget145"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    android:background="@color/white"
    android:elevation="4dp"
    android:gravity="center_vertical">

    <!-- Totale Entrate Label -->
    <TextView
        android:id="@+id/widget47"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/TOTEntrate"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Totale Entrate Amount -->
    <TextView
        android:id="@+id/totaleEntrate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/green"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Euro Symbol for Totale Entrate -->
    <TextView
        android:id="@+id/simboloEuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Totale Uscite Label -->
    <TextView
        android:id="@+id/widget51"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/TOTUscite"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Totale Uscite Amount -->
    <TextView
        android:id="@+id/totaleUscite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Euro Symbol for Totale Uscite -->
    <TextView
        android:id="@+id/simboloEuro2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />
</TableRow>
