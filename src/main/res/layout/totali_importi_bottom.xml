<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget145"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    android:background="#EEEEEE"
    android:elevation="4dp"
    android:gravity="center">

    <!-- Totale Entrate Label -->
    <TextView
        android:id="@+id/widget47"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:gravity="center"
        android:text="@string/TOTEntrate"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Totale Entrate Amount -->
    <TextView
        android:id="@+id/totaleEntrate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center"
        android:text=""
        android:textColor="#4CAF50"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Euro Symbol for Totale Entrate -->
    <TextView
        android:id="@+id/simboloEuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="18sp" />

    <!-- Totale Uscite Label -->
    <TextView
        android:id="@+id/widget51"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:gravity="center"
        android:text="@string/TOTUscite"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Totale Uscite Amount -->
    <TextView
        android:id="@+id/totaleUscite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:ellipsize="none"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="#F44336"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Euro Symbol for Totale Uscite -->
    <TextView
        android:id="@+id/simboloEuro2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="18sp" />
</TableRow>
