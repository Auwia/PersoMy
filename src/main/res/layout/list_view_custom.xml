<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget32"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/descrizioneSpesaCustom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="67"
        android:contentDescription="@string/addSpesa_descrizione"
        android:importantForAccessibility="yes"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/soldiSpesaCustom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="18"
        android:contentDescription="@string/importoAutomaticaDesc"
        android:gravity="end"
        android:importantForAccessibility="yes" />

    <TextView
        android:id="@+id/simboloEuro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:contentDescription="@string/currency"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:text=""
        android:textSize="15sp" />

    <CheckBox
        android:id="@+id/flaggataSpesaCustom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:clickable="true"
        android:contentDescription="@string/flag_checkbox"
        android:focusable="true"
        android:importantForAccessibility="yes" />
</LinearLayout>
